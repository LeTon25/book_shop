@model ShoppingCart
<div class="container">
    <form method="post">
        <input hidden name="ProductId" asp-for="@Model.ProductId" />
        <div class="card shadow border-0 mt-4">
            <div class="card-header bg-secondary bg-gradient text-light py-4">
                <div class="row">
                    <div class="col-12 text-center">
                        <h3 class="text-white text-uppercase">@Model.Product.Title</h3>
                        <p class="text-white-50 fw-semibold mb-0">@Model.Product.Author</p>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="py-3">
                    <div class="row">
                        <div class="col-6 col-md-2 offset-lg-1 pb-1">
                            <a class="btn btn-outline-primary bg-gradient mb-5 fw-semibold btn-sm text-uppercase" href="/">
                                <small>Quay lại</small>
                            </a>
                        </div>
                    </div>
                    <hr/>
                    <div class="row">
                        <div class="col-12 col-lg-3 offset-lg-1 text-center mb-3">
                            @if (Model.Product.ProductImages != null)
                            {
                                <div id="carouselExampleIndicators" class="carousel slide">
                                    <div class="carousel-indicators">
                                        @foreach (var imgWithIndex in Model.Product.ProductImages.Select((image, index) => new { Image = image, Index = index }))
                                        {
                                            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="@imgWithIndex.Index" class="@(imgWithIndex.Index == 0 ? "active" : "")  " aria-current="true" aria-label="Slide 1"></button>
                                        }
                                    </div>
                                    <div class="carousel-inner">
                                        @foreach (var imgWithIndex in Model.Product.ProductImages.Select((image, index) => new { Image = image, Index = index }))
                                        {
                                            <div class="@(imgWithIndex.Index == 0 ? "carousel-item active" :"carousel-item") ">
                                                <img src="@imgWithIndex.Image.ImageUrl" class="d-block w-100" alt="...">
                                            </div>
                                        }
                                    </div>
                                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                        <span class="visually-hidden">Previous</span>
                                    </button>
                                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                        <span class="visually-hidden">Next</span>
                                    </button>
                                </div>
                            }
                            else
                            {
                                <img src="https://placehold.co/500x600/png" class="rounded" />
                            }
                        </div>
                        <div class="col-12 col-lg-6 offset-lg-1">

                            <div class="col-12 col-md-6 pb-4">
                                @foreach(var productCategory in Model.Product.ProductCategories){
                                    <span class="badge bg-danger rounded-pill" style="margin-right:8px;">
                                        @(productCategory.Category.Name)
                                    </span>
                                }
                            </div>
                            <div class="row text-center ps-2">
                                <div class="p-1 col-3 col-lg-2 bg-white text-warning fw-bold">
                                    <div>Giá : </div>
                                </div>
                                <div class="p-1 col-3 col-lg-2 bg-white text-warning fw-bold">
                                    <div>@Model.Product.Price</div>
                                </div>
                            </div>
                            <div class="row pl-2 my-3">
                                <p class="text-secondary lh-sm">@Html.Raw(Model.Product.Description)</p>
                            </div>
                            <div class="row pl-2 mb-3">
                                <div class="col-md-4">
                                    <div class="input-group mb-3">
                                        <span class="input-group-text bg-primary text-white border-0 fw-semibold"
                                              id="inputGroup-sizing-default">
                                            Số lượng
                                        </span>
                                        <input type="number" value="1" class="form-control text-end" asp-for="@Model.Count"
                                               aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" />

                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12 col-md-6 pb-1">
                                    <button type="submit" class="btn btn-primary bg-gradient  w-100 py-2 text-uppercase fw-semibold">
                                        Thêm vào giỏ hàng
                                    </button>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

