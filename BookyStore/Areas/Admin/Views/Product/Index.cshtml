@model List<Product>
<div class="container">
     <div class="row pt-4">
         <div class="col-6">
             <h2>Danh sách các sách</h2>
         </div>
         <div class="col-6 text-end">
            <a class="btn btn-success"asp-area="Admin" asp-controller="Product" asp-action="Upsert">
                <i class="bi bi-plus-circle"></i>
                Tạo mới
             </a>
         </div>
     </div>
</div>
<table id="tblData" class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Tên </th>
            <th>ISBN</th>
            <th>Thể loại</th>
            <th>Tác giả</th>
            <th>Giá</th>
            <th>Hành động</th>
        </tr>
    </thead>
</table>
@section Scripts{
    <script src="~/js/product.js"></script>
}
