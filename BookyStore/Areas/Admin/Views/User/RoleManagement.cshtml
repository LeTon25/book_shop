@using Models;
@using Utility;
@model RoleManagementVM
<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-dark">Quản lý quyền người dùng</h2>
            <hr />
        </div>
        <div asp-validation-summary="ModelOnly" class=" text-danger"></div>
        <input hidden asp-for="@Model.ApplicationUser.Id" />
        <div class="form-group mb-3">
            <label asp-for="@Model.ApplicationUser.Name" class="p-0"></label>
            <input asp-for="@Model.ApplicationUser.Name" readonly type="text" class="form-control" />
        </div>
        <div class="form-group mb-3">
            <select asp-for="ApplicationUser.Role" asp-items="@Model.RoleList" class="form-select"></select>
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary btn-success" style="width:150px">Cập nhật</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="User" asp-action="Index" class="btn btn-secondary">Danh sách người dùng</a>
            </div>
        </div>
    </div>
</form>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function
            $('#Input_Role').change(function () {
                let selection = $('#Input_Role Option:Selected').text()
                if (selection == 'Company') {
                    $('#Input_CompanyID').show()
                } else {
                    $('#Input_CompanyID').hide()
                }
            })
                })
    </script>
}