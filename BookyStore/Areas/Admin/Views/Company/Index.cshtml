@model List<Company>
<div class="container">
     <div class="row pt-4">
         <div class="col-6">
             <h2>Danh sách các công ty</h2>
         </div>
         <div class="col-6 text-end">
            <a class="btn btn-success"asp-area="Admin" asp-controller="Company" asp-action="Upsert">
                <i class="bi bi-plus-circle"></i>
                Tạo mới
             </a>
         </div>
     </div>
</div>
<table id="tblData" class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Tên công ty</th>
            <th>Tên đường</th>
            <th>Huyện</th>
            <th>Thành phố</th>
            <th>SĐT</th>
            <th>Hành động</th>
        </tr>
    </thead>
</table>
@section Scripts{
    <script src="~/js/company.js"></script>
}
