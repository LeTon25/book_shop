@model List<Order>
@{
    string? status = Context.Request.Query["status"];
    var inprocess = "text-decoration-none";
    var shipped = "text-decoration-none";
    var paymentapproved = "text-decoration-none";
    var all = "text-decoration-none";
    switch (status)
    {
        case "inprocess":
            inprocess += " active";
            break;
        case "shipped":
            shipped += " active";
            break;
        case "paymentapproved":
            paymentapproved += " active";
            break;
        default :
            all += " active";
            break;
    }
}
<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2>Danh sách các hóa đơn</h2>
        </div>
    </div>
</div>
<div class="container">
    <div class="d-flex justift-content-between pb-5 pt-2">
        <span></span>
        <ul class="list-group list-group-horizontal-sm">
            <li class="list-group-item">
                <a class="@paymentapproved" asp-controller="Order" asp-action="Index" asp-route-status="paymentapproved">
                    Đã thanh toán
                </a>
            </li>
            <li class="list-group-item">
                <a class="@inprocess" asp-controller="Order" asp-action="Index" asp-route-status="inprocess">
                    Đang giao hàng
                </a>
            </li>
            <li class="list-group-item">
                <a class="@shipped" asp-controller="Order" asp-action="Index" asp-route-status="shipped">
                    Đã giao
                </a>
            </li>

            <li class="list-group-item">
                <a class="@all" asp-controller="Order" asp-action="Index" asp-route-status="All">
                    Tất cả
                </a>
            </li>
        </ul>
    </div>
</div>
<table id="tblData" class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Mã hóa đơn </th>
            <th>Khách hàng</th>
            <th>SĐT</th>
            <th>Email</th>
            <th>Trạng thái</th>
            <th>Tổng cộng</th>
            <th></th>
        </tr>
    </thead>
</table>
@section Scripts{
    <script src="~/js/order.js"></script>
}
