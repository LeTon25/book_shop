@model List<Category>
<div class="container">
     <div class="row pt-4">
         <div class="col-6">
             <h2>Danh sách các thể loại sách</h2>
         </div>
         <div class="col-6 text-end">
            <a class="btn btn-success" asp-controller="Category" asp-action="Create">
                <i class="bi bi-plus-circle"></i>
                Tạo mới
             </a>
         </div>
     </div>
</div>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Mã thể loại</th>
            <th>Tên thể loại</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @{
            if(Model.Count > 0)
            {
                @foreach(var category in Model)
                {
                    <tr>
                        <td>@category.ID</td>
                        <td>@category.Name</td>
                        <td>
                          <a asp-action="Edit" asp-controller="Category" asp-route-id="@category.ID" class="w-40 btn btn-group btn-warning" role="group">
                                <i class="bi bi-pencil-square"></i>
                                Chỉnh sửa
                          </a>
                            <a asp-action="Delete" asp-controller="Category" asp-route-id="@category.ID" class="w-40 btn btn-group btn-danger" role="group">
                                <i class="bi bi-trash3"></i>
                                Xóa
                            </a>
                        </td>
                    </tr>
                }
            }
        }
    </tbody>
</table>
