@using Models;
@model Category;
<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-dark">Chỉnh sửa thể loại</h2>
            <hr />
        </div>
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-group mb-3">
            <label asp-for="Name" class="p-0">Tên thể loại</label>
            <input asp-for="Name" disabled type="text" class="form-control" />
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary btn-danger" style="width:150px">Xóa</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
            </div>
        </div>
    </div>
</form>